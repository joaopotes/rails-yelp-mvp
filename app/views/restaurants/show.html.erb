<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address  %></p>
<p><%= @restaurant.phone_number  %></p>
<p><% @restaurant.reviews.each do |review|  %></p>
  <hr>
  <p><%= review.content  %></p>
  <%= link_to 'Delete', review_path(review), method: :delete %>
  <hr>
<% end %>

<%= link_to 'Back', restaurants_path %>
<%= link_to 'Edit', edit_restaurant_path(@restaurant)%>
<%= link_to 'Add Review', new_restaurant_review_path(@restaurant)%>

<%= link_to 'Delete', restaurant_path(@restaurant), method: :delete, data: {confirm: 'Are you sure?'} %>
